{
  "name": "arcadia-eternity",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcadia-eternity/arcadia-eternity.git"
  },
  "scripts": {
    "build": "run-p build:package build:cli",
    "watch": "run-p watch:package watch:cli",
    "clean": "run-p clean:package clean:cli",
    "build:package": "pnpm --filter \"./packages/**\" --filter=!@arcadia-eternity/web-ui run build&&pnpm run build:cli",
    "watch:package": "pnpm --filter \"./packages/**\" --filter=!@arcadia-eternity/web-ui --parallel run watch",
    "clean:package": "pnpm --filter \"./packages/**\" --filter=!@arcadia-eternity/web-ui run clean",
    "build:cli": "esbuild ./bin/cli.ts --bundle --format=esm --platform=node --outdir=dist/bin --allow-overwrite --external:./node_modules/*",
    "watch:cli": "esbuild ./bin/cli.ts --bundle --format=esm --platform=node --outdir=dist/bin --watch --external:./node_modules/*",
    "clean:cli": "rm -rf dist",
    "generate": "pnpm --filter @arcadia-eternity/schema run generate",
    "generate:csbind": "tsx packages/csbind/script/generate.ts",
    "cli": "tsx ./bin/cli.ts",
    "web:dev": "pnpm --filter @arcadia-eternity/web-ui run dev",
    "storybook": "pnpm --filter @arcadia-eternity/web-ui run storybook"
  },
  "dependencies": {
    "@arcadia-eternity/battle": "workspace:^",
    "@arcadia-eternity/client": "workspace:^",
    "@arcadia-eternity/console": "workspace:^",
    "@arcadia-eternity/const": "workspace:^",
    "@arcadia-eternity/data-repository": "workspace:^",
    "@arcadia-eternity/fsloader": "workspace:^",
    "@arcadia-eternity/interface": "workspace:^",
    "@arcadia-eternity/local-adapter": "workspace:^",
    "@arcadia-eternity/parser": "workspace:^",
    "@arcadia-eternity/schema": "workspace:^",
    "@arcadia-eternity/server": "workspace:^",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "i18next": "^24.2.3",
    "pino": "^9.6.0",
    "socket.io": "^4.8.1",
    "ts-morph": "^25.0.1",
    "yaml": "^2.7.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@pinia/testing": "^1.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "bun-types": "^1.2.8",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-vue": "^10.0.0",
    "jest": "^29.7.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "quicktype": "^23.0.171",
    "quicktype-core": "^23.0.171",
    "ts-jest": "^29.3.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "typescript-json-schema": "^0.65.1",
    "undici-types": "^7.7.0"
  },
  "bin": "./dist/bin/cli.js",
  "workspaces": [
    "packages/*"
  ]
}
