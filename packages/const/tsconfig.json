{
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "outDir": "./dist/",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*"],
  "exclude": ["./node_modules"]
}
