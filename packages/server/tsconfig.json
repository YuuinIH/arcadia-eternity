{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "outDir": "./dist/",
    "verbatimModuleSyntax": true,
    "types": ["bun-types", "node"],
    "composite": true
  },
  "include": ["./*"],
  "exclude": ["./node_modules"]
}
