{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "../../dist/parser",
    "declaration": true,
    "declarationMap": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./*"]
}
