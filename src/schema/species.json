{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Species",
    "allOf": [
        {
            "$ref": "#/definitions/Prototype"
        },
        {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "$ref": "#/definitions/Type"
                },
                "baseStats": {
                    "type": "object",
                    "description": "映射每个 StatType 到一个数字值",
                    "properties": {
                        "atk": {
                            "type": "number"
                        },
                        "def": {
                            "type": "number"
                        },
                        "spa": {
                            "type": "number"
                        },
                        "spd": {
                            "type": "number"
                        },
                        "spe": {
                            "type": "number"
                        },
                        "hp": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "atk",
                        "def",
                        "spa",
                        "spd",
                        "spe",
                        "hp"
                    ],
                    "additionalProperties": false
                },
                "skills": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Skill"
                    }
                },
                "genderRatio": {
                    "type": "array",
                    "description": "数组包含两个数字",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 2,
                    "maxItems": 2
                },
                "abilities": {
                    "type": "string",
                    "description": "TODO: 特性"
                },
                "emblem": {
                    "type": "string",
                    "description": "TODO: 纹章"
                }
            },
            "required": [
                "id",
                "name",
                "type",
                "baseStats",
                "skills"
            ]
        }
    ],
    "definitions": {
        "Type": {
            "type": "string",
            "description": "精灵的属性",
            "anyOf": [
                {
                    "const": "Normal"
                },
                {
                    "const": "Grass"
                },
                {
                    "const": "Water"
                },
                {
                    "const": "Fire"
                },
                {
                    "const": "Wind"
                },
                {
                    "const": "Bug"
                },
                {
                    "const": "Flying"
                },
                {
                    "const": "Electric"
                },
                {
                    "const": "Ground"
                },
                {
                    "const": "Ice"
                },
                {
                    "const": "Psychic"
                },
                {
                    "const": "Fighting"
                },
                {
                    "const": "Trait"
                },
                {
                    "const": "Light"
                },
                {
                    "const": "Mystery"
                },
                {
                    "const": "Shadow"
                },
                {
                    "const": "Dragon"
                },
                {
                    "const": "Desert"
                },
                {
                    "const": "Ancient"
                },
                {
                    "const": "Divine"
                },
                {
                    "const": "Miracle"
                },
                {
                    "const": "Holy"
                },
                {
                    "const": "ElfKing"
                }
            ]
        },
        "Skill": {
            "type": "array",
            "description": "可用的技能名",
            "items": {
                "type": "string"
            }
        }
    }
}